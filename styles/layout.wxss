.page-wraper {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.page-main {
  flex: 1;
  position: relative;
  overflow-y: scroll;
}
.page-container {
  width: 96%;
  margin: 0 auto;
}
.page-footer {
  color: #fff;
  line-height: 44px;
  flex: 0 0 44px;
}
.page-container-padding-top::before {
  content: '';
  display: block;
  width: 100%;
  height: 10px;
}